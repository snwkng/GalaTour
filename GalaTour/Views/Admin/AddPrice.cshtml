@model IEnumerable<GalaTour.Models.FileModel>
@{
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
    ViewBag.Title = "Добавить прайс";
}
<div class="container" style="margin-top:32px; margin-bottom:32px;">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6" style="background-color: #f5f5f5; border-radius: .25rem; padding: 8px;">
            <h3 style="padding: 16px;">Выберите прайс для загрузки</h3>
            <form asp-action="AddPrice" asp-controller="Admin" method="post" enctype="multipart/form-data">
                <input type="file" name="uploadedFile" style="padding: 16px;"><br>
                <input type="submit" class="btn btn-info" value="Загрузить" style="margin: 16px;">
            </form>

            <a asp-action="Index" style="padding: 16px;">Назад</a>
        </div>
    </div>
</div>