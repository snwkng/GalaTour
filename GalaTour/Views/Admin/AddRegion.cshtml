@model GalaTour.Models.Region
@{
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
    ViewData["Title"] = "Добавить регион";
}
<h4>Region</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRegion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegionName" class="control-label"></label>
                <input asp-for="RegionName" class="form-control" />
                <span asp-validation-for="RegionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegionImage" class="control-label"></label>
                <input asp-for="RegionImage" class="form-control" />
                <span asp-validation-for="RegionImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

