@model IEnumerable<GalaTour.Models.Excursion>

@{
    ViewData["Title"] = "Index";
}

    <div class="container-fluid">
        <h2>Экскурсионные туры</h2>

        <p>
            <a asp-action="Create">Добавить экскурсию</a>
        </p>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ThePriceInclude)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImageURL)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Duration)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HotelName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HotelLink)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DocLink)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <div style="max-height: 100px; overflow:hidden;">@Html.DisplayFor(modelItem => item.Description)</div>
                            </td>
                            <td>
                                <div style="max-height: 100px; overflow:hidden;">@Html.DisplayFor(modelItem => item.ThePriceInclude)</div>
</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ImageURL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Duration)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HotelName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HotelLink)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DocLink)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ID">Редактировать</a> |
                                <a asp-action="Details" asp-route-id="@item.ID">Детали</a> |
                                <a asp-action="Delete" asp-route-id="@item.ID">Удалить</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
