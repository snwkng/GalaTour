@model IEnumerable<GalaTour.Models.BusTour>
@{
    foreach (var item in Model)
    {
        ViewBag.Description = "Автобусный тур в " + item.TourCity.City + "из Орла, " + item.HotelType + " " + item.HotelName + " - Туристическое агентство ГалаТур";
        ViewBag.Keywords = "";
        ViewBag.Title = "Автобусные туры в " + item.TourCity.City + " из Орла";
        ViewBag.HotelImage = item.HotelImage;
    }
}
<header class="hotel-header" style="background-image: url('/images/tour/hotels/@ViewBag.HotelImage')">
    <div style="position: absolute; top: 0; height: inherit; width: 100%; background: rgba(0,0,0, .5);"></div>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="~/">
                <span style="color: #ff5722">G</span>ala<span style="color:#009688">T</span>our
            </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                    data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="material-icons">
                    menu
                </i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" asp-controller="Home" asp-action="BusTours">Автобусные туры к морю</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" asp-controller="Home" asp-action="Excursions">Экскурсии</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" asp-controller="Home" asp-action="ToursAbroad">Туры за границу</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" asp-controller="Home" asp-action="Contacts">Контакты</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container hotel-nav__sticky">
    <div class="row">
        <div class="col-md-12">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Active</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Disabled</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<section class="section-bus-tour-hotel container" style="height: 1000px;">
    <h2>Автобусные туры в</h2>
    <div class="row d-flex justify-content-start">
        @foreach (var item in Model)
        {
            <a class="hotel-card col-md-3 col-sm-4 col-6" asp-controller="Home" asp-action="Hotel" asp-all-route-data='new Dictionary<string,string> { { "regName", item.Region.RegionName }, {"city", item.TourCity.City }, { "hotelName", item.HotelName } }'>
                <!-- настроить роут -->
                <div class="hotel-card-img" style="background-image: url(/images/tour/hotels/@item.HotelImage)"></div>
                <div class="hotel-card-content">
                    <p class="hotel-card-content--city">@item.TourCity.City</p>
                    <p class="hotel-card-content--hotel-info" title=""><span>@item.HotelType</span> @item.HotelName</p>
                    <p class="hotel-card-content--price">от @item.Price за поездку</p>
                </div>
            </a>
        }
    </div>
</section>
